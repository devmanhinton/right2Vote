<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.right2vote.PolicyStatementActivity" >
    
    <LinearLayout android:layout_weight="6.0"
        android:orientation="vertical"
        android:layout_width="match_parent"
    	android:layout_height="0dp" >
	    <TextView
	        android:id="@+id/policyStatement"
	        android:text="@string/hello_world"
	        android:gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"/>
	</LinearLayout>
        
    <LinearLayout android:layout_weight="2.0"
        android:orientation="vertical"
        android:layout_width="match_parent"
    	android:layout_height="0dp" >
	    
	    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content">
		<Button
			 android:onClick="nextPolicyStatementOrFinish"
			 android:id="@+id/agree"
			 android:text="@string/agree" 
			 android:layout_height="wrap_content"
			 android:layout_width="wrap_content" />   
	   <Button
		    android:onClick="nextPolicyStatementOrFinish"
		    android:id="@+id/disagree"
		    android:text="@string/disagree" 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content" /> 	  
		</LinearLayout>
		
	    <Button
		    android:onClick="goHome"
		    android:id="@+id/homeButton"
		    android:text="@string/home_button"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content" />   
    </LinearLayout>
</LinearLayout>
